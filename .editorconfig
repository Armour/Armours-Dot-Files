# EditorConfig is awesome:
# http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js, jsx}]
indent_style = space
indent_size = 2

[*.{css, scss, sass, less}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
